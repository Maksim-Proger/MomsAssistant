<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".model.database.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity android:name=".all_activities.MainScreenActivity"/>
        <activity android:name=".all_activities.RegistrationActivity"/>
        <activity android:name=".all_activities.ArticlesActivity"/>
        <activity android:name=".all_activities.ChildrenProfileActivity"/>
        <activity android:name=".all_activities.DiaryActivity"/>
        <activity android:name=".all_activities.GamesActivity"/>
        <activity android:name=".all_activities.NotesActivity"/>
        <activity android:name=".all_activities.SleepActivity"/>
        <activity android:name=".all_activities.MomProfileActivity"/>
        <activity android:name=".all_activities.SleepStatistics"/>
        <activity android:name=".all_activities.Assistant"/>
        <service android:name=".model.helperClasses.TimerService" />

        <activity android:name=".all_activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>