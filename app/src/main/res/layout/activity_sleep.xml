<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/other_button"
                android:text="@string/buttonBack"
                android:textColor="@color/black"
                android:id="@+id/back_button_sleep"
                android:textSize="11sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="monospace"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="26sp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/other_button"
                android:text="@string/sleepProfile"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/fellAsleepView"
                android:textColor="@color/black"
                android:background="@color/secondMainColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/wokeUpView"
                android:textColor="@color/black"
                android:background="@color/secondMainColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/resultSleep"
                android:textColor="@color/black"
                android:background="@color/secondMainColor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/timer"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/fellAsleep"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:id="@+id/fellAsleep"
                android:textColor="@color/black"
                android:background="@drawable/button_on_login_page"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/wokeUp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/wokeUp"
                android:textColor="@color/black"
                android:background="@drawable/button_on_login_page"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Пауза"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:id="@+id/pause"
                android:textColor="@color/black"
                android:background="@drawable/button_on_login_page"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Продолжить"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/cont"
                android:textColor="@color/black"
                android:background="@drawable/button_on_login_page"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_on_login_page"
            android:textColor="@color/black"
            android:text="@string/sleepStatistics" />

        <TextView
            android:id="@+id/testClock"
            android:layout_marginTop="45dp"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/secondMainColor"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>