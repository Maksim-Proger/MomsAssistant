<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/other_button"
                android:text="@string/buttonBack"
                android:textColor="@color/black"
                android:id="@+id/back_button"
                android:textSize="15sp"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="26sp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/other_button"
                android:text="@string/momsProfile"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/fields_for_login_page"
                app:srcCompat="@drawable/photoismissing"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColorHint="@color/textColor2"
                android:hint="@string/name_field" />

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColorHint="@color/textColor2"
                android:hint="@string/surname_field" />

            <EditText
                android:id="@+id/editPatronymic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColorHint="@color/textColor2"
                android:hint="@string/patronymic_field" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColorHint="@color/textColor2"
                android:hint="@string/email_field" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColorHint="@color/textColor2"
                android:hint="@string/password_field" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_profile_image_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fields_for_login_page"
                android:fontFamily="monospace"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:hint="Добавить фотографию"
                android:textAllCaps="false"
                android:textColorHint="@color/textColor2"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:background="@drawable/button_on_login_page"
                android:textAllCaps="false"
                android:text="@string/save" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>