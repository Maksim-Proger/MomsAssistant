<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="32sp"
            android:background="@color/secondMainColor"
            android:text="Мамин профиль" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            app:srcCompat="@drawable/photoismissing" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="@string/name_field" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="@string/surname_field" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="@string/patronymic_field" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="@string/email_field" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/fields_for_login_page"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="@string/password_field" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>